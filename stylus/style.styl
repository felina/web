@import 'nib'

// Dimensions
sidebar_width = 250px
header_height = 60px
margin_small = 10px
margin_mid = 20px

// Sizes
mid_grey = #505050
dark_grey = #252525
shadow_black = rgba(0, 0, 0, 0.4)
highlight = rgb(70, 179, 19)

// Borders
black_border = 1px solid black

html, body, .wrapper
  height: 100%

header, footer
  background: dark_grey
  color: white

header
  height: header_height
  border-bottom: black_border
  margin-top: -margin_small
  padding: 0 20px 0 0

  ul
    li
      margin: 0 5px
      height: header_height
      line-height: header_height
      font-size: 20px
      float: left
      list-style-type: none

footer
  border-top: black_border
  padding: 10px

  ul
    height: 35px
    line-height: 35px

header a, .sidebar a
  color: white
  text-decoration: none

header a:hover, .sidebar a:hover
  color: white
  text-decoration: none

.left
  float: left

.right
  float: right

.avatar
  border-radius: 3px

#banner
  background-size: cover
  background-position: center
  height: 400px
  width: 100%
  color: white

.bannerwrap
  max-width: 800px
  min-width: 400px
  margin: 0 auto

.overlay
  width: 100%
  height: 100%
  background: shadow_black

.inset
  box-shadow: 0 5px 7px shadow_black inset

.pad50
  padding: 20px 50px

#main h2
  font-size: 1.5em

.title
  font-size: 40px
  font-weight: bold

.details
  margin-top: 50px

.details > .row > div
  border-right: 1px solid #858585
  min-height: 210px

.details > .row > div:last-child
  border-right: none

.sidebar
  background: dark_grey
  color: white
  width: sidebar_width
  float: left
  height: 100%
  box-shadow: -5px 0 10px shadow_black inset

  ul
    list-style-type: none
    padding: 0

    li
      margin: margin_small 0
      padding: 10px
      border-bottom: 1px solid mid_grey

      h2
        font-size: 20px
        margin: 0
        color: highlight

      a
        margin-left: margin_mid
        cursor: pointer

.dashboard
  padding: 10px 30px
  height: 100%
  left: sidebar_width
  background: white
  position: absolute
  transition: 0.2s left, 0.2s width

  ul
    list-style-type: none

#toggleSidebar
  border: none
  background: none
  color: white
  padding: 0 10px

#toggleSidebar:focus
  outline: none

.name
  margin-bottom: margin_mid

.progress
  width: 300px

.eta
  margin-bottom: margin_mid

.job-img
  width: 200px
  height: 200px
  background-image: url('/img/elephant.jpg')
  background-position: center
  background-size: cover

.jobbody > div
  margin-right: margin_mid

.metadata
  padding: 10px
  font-size: 30px
  border: 1px solid #ccc
  border-radius: 3px
  background: whitesmoke

.dropzone
  margin-bottom: margin_mid

.tracer-wrap
  margin-bottom: margin_mid
